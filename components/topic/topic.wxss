.index-bg {
  font-size: 15px;
  color: #8a8a8a;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.index-image {
	width: 200rpx;
	height: 200rpx;
	margin-bottom: 10%;
}
.index-item {
  background: #fff;
  border-bottom: 1px solid #eeeded;
  padding: 20rpx;
  display: block;
}
.index-nav {
  display: flex;
}
.index-item-left {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: #eeeded;
  margin-right: 20rpx;
}
.user-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.index-item-right {
  width: 100%;
}
.user-name {
  font-size: 13px;
  color: #ff8200;
}
.topic-content {
  font-size: 13px;
  word-wrap: break-word;
  margin-top: 10rpx;
}
.image-list {
  margin: 20rpx 0;
  display: flex;
	flex-wrap: wrap;
}
.image-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 9rpx;
  margin-bottom: 9rpx;
}
.image-item:nth-child(3n) {
  margin-right: 0;
}
.topic-info {
  font-size: 12px;
  color: #999;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.video-list {
  font-size: 0;
  margin: 20rpx 0;
}
.video-item {
  width: 100%;
}
.index-toTop {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 25px;
  font-weight: 900;
  color: #fff;
  background: #ffbc33;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
}
.index-toTop_hover {
  opacity: 0.6;
}