/* pages/create/create.wxss */
.page-container {
	height: auto;
	padding: 80rpx 40rpx;
	overflow: hidden;
}
.create-textarea {
  width: 100%;
  font-size: 14px;
  color: #333;
	line-height: 50rpx;
	padding-left: 20rpx;
}
.create-file-box {
  width: 194rpx;
  height: 194rpx;
	background-color: #ededed;
	position: relative;
	margin-top: 20rpx;
}
.create-file::before {
	content: " ";
	width: 2px;
	height: 32px;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	background-color: #a3a3a3;
}
.create-file::after {
	content: " ";
	width: 32px;
	height: 2px;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	background-color: #a3a3a3;
}
.create-file-box_hover {
	opacity: 0.6;
}
.create-image-list {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	margin-top: 40rpx;
}
.create-image-item {
	width: 200rpx;
	height: 200rpx;
	margin-bottom: 37rpx;
}
.create-image-item:last-child {
	margin-right: 237rpx;
}
.create-video-list {
	margin: 40rpx 0;
	display: flex;
	justify-content: center;
}
.create-video-item {
	width: 400rpx;
	height: 400rpx;
}
.create-btn {
  font-size: 16px;
  background-color: #333;
	color: #fff;
	padding: 0;
  line-height: 100rpx;
	border-radius: 0;
	float: right;
	margin-top: 80rpx;
}
.creadte-btn_hover {
	opacity: 0.6;
}