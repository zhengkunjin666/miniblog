/* pages/detail/detail.wxss */
.userInfo-section {
	padding: 30rpx;
	display: flex;
}
.userInfo-image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.user-name {
  font-size: 15px;
  color: #666;
}
.create-time {
  font-size: 13px;
	color: #999;
}
.topic-section {
	padding: 0 30rpx;
}
.image-list {
  margin-top: 20rpx;
  display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: flex-start;
}
.image-item {
  width: 210rpx;
  height: 210rpx;
  margin-bottom: 37rpx;
}
.image-item:last-child {
	margin-right: 241rpx;
}
.image-item.one {
	width: 100%;
	height: 500rpx;
	margin-right: 0;
}
.image-item.two {
	width: 338rpx;
	height: 338rpx;
	margin-right: 0;
}
.image-item.two:nth-child(2n) {
	margin-right: 0;
}
.image-item:nth-child(3n) {
  margin-right: 0;
}
.video-item {
  width: 100%;
  margin: 20rpx 0;
}
.reply-section {
	padding-bottom: 40rpx;
	margin-top: 30rpx;
	display: flex;
	flex-wrap: wrap;
}
.reply-form {
	width: 100%;
	padding: 0 30rpx;
	display: table-cell;
}
.reply-input {
	width: 79%;
	height: 100rpx;
	border: 1px solid #5663a8;
	padding: 0 10rpx;
	display: inline-block;
	box-sizing: border-box;
}
button {
	font-weight: 400;
	color: #fff;
	background-color: #5663a8;
	border-radius: 0;
	padding: 0;
	line-height: 100rpx;
}
.reply-sumbit {
	display: inline-block;
}
.reply-sumbit_hover {
	opacity: 0.6;
}
.reply-list {
	margin-top: 30rpx;
}