/* pages/detail/detail.wxss */
.userInfo-section {
	padding: 30rpx 30rpx 10rpx 30rpx;
	display: flex;
	align-items: center;
}
.userInfo-image {
  width: 80rpx;
	height: 80rpx;
	border-radius: 10rpx;
  margin-right: 20rpx;
}
.userInfo-name {
  font-size: 13px;
  color: #ff8200;
}
.create-time {
  font-size: 12px;
	color: #999;
}
.topic-section {
	font-size: 14px;
  word-wrap: break-word;
	padding: 0 30rpx;
}
.reply-section {
	margin-top: 20rpx;
	display: flex;
	flex-wrap: wrap;
}
.reply-desc {
	font-size: 14px;
	color: #999;
	padding: 30rpx;
}
.reply-form {
	font-size: 0;
	width: 100%;
	padding: 0 30rpx;
	display: table-cell;
}
.reply-input {
	width: 79%;
	height: 80rpx;
	font-size: 14px;
	border: 1px solid #ffbc33;
	padding: 0 20rpx;
	display: inline-block;
	box-sizing: border-box;
}
button {
	font-size: 14px;
	font-weight: 400;
	color: #fff;
	background-color: #ffbc33;
	border-radius: 0;
	padding: 0;
	line-height: 80rpx;
}
.login-btn {
	border-radius: 50rpx;
	background: linear-gradient(to left,#ff8200 0,#ffbc33 100%);
}
.reply-sumbit {
	display: inline-block;
}
.reply-sumbit_hover {
	opacity: 0.6;
}
.reply-list {
	border-top: 1px solid #eeeded;
  background: #eeeded;
	margin-top: 30rpx;
}
.reply-count {
	font-size: 14px;
	color: #ffbc33;
	background: #fff;
	padding-left: 20rpx;
	padding-top: 20rpx;
}
.reply-container {
	padding-bottom: 0;
	border: 0;
}
.reply-item-right {
	width: 100%;
	padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeded;
}