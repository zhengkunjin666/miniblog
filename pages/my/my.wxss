/* pages/my/my.wxss */
.page-container{
	position: relative;
	display: flex;
	flex-direction: column;
}
.userInfo {
	width: 100%;
	height: 20%;
	background: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.userinfo-nickname {
	font-size: 20px;
	margin-left: 40rpx;
}
.userinfo-avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 40rpx;
}
.nav-list {
	height: 100%;
	border-top: 20rpx solid #e4e4e4;
	background: #fff;
}
.nav-item {
	padding: 40rpx;
	border-bottom: 1px solid #e4e4e4;
	position: relative;
}
.nav-item-name {
	font-size: 16px;
	color: #666;
}
.nav-item-icon{
	width: 6px;
  height: 6px;
	border: 2px solid #999;
	border-left: 0;
	border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  top: 43%;
	right: 30rpx;
}
.login-btn {
	color: #fff;
	background-color: #000;
	padding: 0;
	line-height: 120rpx;
	border-radius: 0;
	position: absolute;
	bottom: 140rpx;
	left: 10%;
}
.login-btn_hover {
	opacity: 0.6;
}