.image-list {
  margin-top: 20rpx;
  display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: flex-start;
}
.image-item {
  width: 225rpx;
  height: 225rpx;
  margin-bottom: 1.5%;
}
.image-item:last-child {
	margin-right: 235rpx;
}
.image-item.one {
	width: 100%;
	height: 500rpx;
	margin-right: 0;
}
.image-item.two {
	width: 338rpx;
	height: 338rpx;
	margin-right: 0;
}
.image-item.two:nth-child(2n) {
	margin-right: 0;
}
.image-item:nth-child(3n) {
  margin-right: 0;
}
.video-list {
	font-size: 0;
}
.video-item {
  width: 100%;
  margin: 10rpx 0;
}